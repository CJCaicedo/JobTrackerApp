@* ---------------------------------------------------------
   File: Error.cshtml
   Description: Page shown when something goes wrong.
   Notes: Meant to be friendly for the user.
   Author: Cindy Johana Caicedo
   --------------------------------------------------------- *@
@{
    ViewData["Title"] = "Error";
}

<div class="kb-page">
    <header class="kb-header">
        <div class="kb-brand">
            <img src="~/images/logocindy.png" alt="Logo" class="kb-logo" onerror="this.style.display='none'" />
            <div>
                <h1 class="kb-title">Something went wrong</h1>
                <p class="kb-sub">We’re sorry — an unexpected error occurred.</p>
            </div>
        </div>
        <a asp-controller="JobApplicationUi" asp-action="Index" class="btn btn-primary">← Back to board</a>
    </header>

    <div class="kb-edit-wrapper">
        <div class="kb-card kb-error-card">
            <div class="kb-error-icon">⚠️</div>
            <h2 class="kb-error-title">Oops! Something didn’t go as planned.</h2>
            <p class="kb-error-message">
                Please try again, refresh the page, or go back to your job board.  
                If this keeps happening, contact the site administrator.
            </p>

            <div class="kb-error-actions">
                <a asp-controller="JobApplicationUi" asp-action="Index" class="btn btn-primary">
                    Back to Board
                </a>
                <button class="btn btn-secondary" onclick="location.reload()">Reload Page</button>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: radial-gradient(circle at 30% 20%, #0f172a 0%, #1e293b 70%, #020617 100%);
        font-family: 'Inter', 'Segoe UI', Roboto, sans-serif;
        color: #f8fafc;
        margin: 0;
        padding: 0;
    }

    .kb-page {
        max-width: 1280px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .kb-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .kb-brand {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .kb-logo {
        width: 140px;
        height: auto;
        object-fit: contain;
        padding: 6px;
    }

    .kb-title {
        font-weight: 700;
        font-size: 1.3rem;
        color: #f1f5f9;
        margin: 0;
    }

    .kb-sub {
        margin: 0;
        font-size: 0.8rem;
        color: #94a3b8;
    }

    .btn-primary {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        border: none;
        color: white;
        font-weight: 500;
        padding: 0.6rem 1rem;
        border-radius: 8px;
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #7c3aed, #6366f1);
        box-shadow: 0 0 15px rgba(99,102,241,0.4);
    }

    .btn-secondary {
        background: rgba(255,255,255,0.05);
        border: 1px solid rgba(255,255,255,0.12);
        color: #e2e8f0;
        padding: 0.6rem 1rem;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn-secondary:hover {
        background: rgba(255,255,255,0.12);
    }

    .kb-edit-wrapper {
        display: flex;
        justify-content: center;
    }

    .kb-card {
        background: rgba(255,255,255,0.06);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255,255,255,0.08);
        border-radius: 16px;
        padding: 2rem;
        width: 100%;
        max-width: 680px;
        box-shadow: 0 8px 30px rgba(0,0,0,0.25);
        text-align: center;
    }

    .kb-error-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .kb-error-title {
        font-size: 1.4rem;
        margin-bottom: 0.75rem;
        color: #f1f5f9;
        font-weight: 600;
    }

    .kb-error-message {
        font-size: 0.9rem;
        color: #cbd5e1;
        margin-bottom: 1.5rem;
    }

    .kb-error-actions {
        display: flex;
        gap: 0.8rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    @@media (max-width: 700px) {
        .kb-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.8rem;
        }

        .kb-card {
            padding: 1.4rem;
        }
    }
</style>
