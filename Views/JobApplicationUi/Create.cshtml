@* ---------------------------------------------------------
   File: Create.cshtml
   Description: Page where the user can add a new job application.
   Notes: Shows a form and sends the info to the server.
   Author: Cindy Johana Caicedo
   --------------------------------------------------------- *@

@model JobTrackerApp.Dtos.JobApplicationCreateDto

@{
    ViewData["Title"] = "Add Job Application";
}

<div class="kb-page">
    <header class="kb-header">
        <div class="kb-brand">
            <img src="~/images/logocindy.png" alt="Logo" class="kb-logo" onerror="this.style.display='none'" />
            <div>
                <h1 class="kb-title">Add new job</h1>
                <p class="kb-sub">Save a new application to your board</p>
            </div>
        </div>
        <a asp-controller="JobApplicationUi" asp-action="Index" class="btn btn-primary">‚Üê Back to board</a>
    </header>

    <div class="kb-edit-wrapper">
        <div class="kb-card kb-edit-card">
            <form asp-controller="JobApplicationUi" asp-action="Create" method="post" class="kb-form-grid">
                <div asp-validation-summary="All" class="text-danger kb-full"></div>

                <!-- Row 1 -->
                <div class="kb-field">
                    <label asp-for="Company" class="kb-label"></label>
                    <input asp-for="Company" class="kb-input" />
                    <span asp-validation-for="Company" class="text-danger"></span>
                </div>

                <div class="kb-field">
                    <label asp-for="JobTitle" class="kb-label"></label>
                    <input asp-for="JobTitle" class="kb-input" />
                    <span asp-validation-for="JobTitle" class="text-danger"></span>
                </div>

                <!-- Row 2 -->
                <div class="kb-field">
                    <label asp-for="Status" class="kb-label"></label>
                    <select asp-for="Status" class="kb-input"
                            asp-items="Html.GetEnumSelectList<JobTrackerApp.Dtos.ApplicationStatus>()">
                        <option value="">-- Select Status --</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="kb-field">
                    <label asp-for="EmploymentType" class="kb-label"></label>
                    <select asp-for="EmploymentType" class="kb-input"
                            asp-items="Html.GetEnumSelectList<JobTrackerApp.Dtos.EmploymentType>()">
                        <option value="">-- Select Type --</option>
                    </select>
                    <span asp-validation-for="EmploymentType" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="kb-field kb-full">
                    <label asp-for="Description" class="kb-label"></label>
                    <textarea asp-for="Description" class="kb-input" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Links -->
                <div class="kb-field">
                    <label asp-for="WebsiteLink" class="kb-label"></label>
                    <input asp-for="WebsiteLink" class="kb-input" placeholder="https://example.com/job" />
                    <span asp-validation-for="WebsiteLink" class="text-danger"></span>
                </div>

                <div class="kb-field">
                    <label asp-for="ResumeUrl" class="kb-label"></label>
                    <input asp-for="ResumeUrl" class="kb-input" placeholder="https://drive.google.com/resume.pdf" />
                    <span asp-validation-for="ResumeUrl" class="text-danger"></span>
                </div>

                <div class="kb-field">
                    <label asp-for="CoverLetter" class="kb-label"></label>
                    <input asp-for="CoverLetter" class="kb-input" placeholder="https://drive.google.com/cover-letter.pdf" />
                    <span asp-validation-for="CoverLetter" class="text-danger"></span>
                </div>

                <div class="kb-field">
                    <label asp-for="Salary" class="kb-label"></label>
                    <input asp-for="Salary" class="kb-input" placeholder="85000" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

                <!-- Date + Contact -->
                <div class="kb-field">
                    <label asp-for="DateApplied" class="kb-label"></label>
                    <input asp-for="DateApplied" type="date" class="kb-input" id="DateApplied" />
                    <span asp-validation-for="DateApplied" class="text-danger"></span>
                </div>

                <div class="kb-field">
                    <label asp-for="ContactPerson" class="kb-label"></label>
                    <input asp-for="ContactPerson" class="kb-input" />
                    <span asp-validation-for="ContactPerson" class="text-danger"></span>
                </div>

                <div class="kb-field">
                    <label asp-for="ContactEmail" class="kb-label"></label>
                    <input asp-for="ContactEmail" class="kb-input" />
                    <span asp-validation-for="ContactEmail" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <div class="kb-full kb-actions-line">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save application
                    </button>
                    <a asp-controller="JobApplicationUi" asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

    <script>
        // Calendar auto-open on hover (only in supported browsers)
        const dateInput = document.getElementById('DateApplied');
        if (dateInput && dateInput.showPicker) {
            dateInput.addEventListener('mouseenter', () => {
                dateInput.showPicker();
            });
        }
    </script>
}

