@model IEnumerable<JobTrackerApp.Dtos.JobApplicationReadDto>

@{
    ViewData["Title"] = "Job Board";
    // define the order of columns
    var statuses = new[]
    {
        JobTrackerApp.Dtos.ApplicationStatus.Applied,
        JobTrackerApp.Dtos.ApplicationStatus.Interviewing,
        JobTrackerApp.Dtos.ApplicationStatus.Offer,
        JobTrackerApp.Dtos.ApplicationStatus.Rejected
    };
}

<div class="kb-page">
    <header class="kb-header">
        <div class="kb-brand">
            <img src="~/images/logocindy.png" alt="Logo" class="kb-logo" onerror="this.style.display='none'" />
            <div>
              <!--  <h1 class="kb-title">Cindyâ€™s Job Tracker</h1> 
                <p class="kb-sub">Track your applications by stage</p> -->
            </div>
        </div>
        <a asp-action="Create" class="btn btn-primary">+ Add job</a>
    </header>

    <div class="kb-board">
        @foreach (var status in statuses)
        {
            var items = Model.Where(m => m.Status == status)
                             .OrderByDescending(m => m.DateApplied)
                             .ToList();

            var statusName = status.ToString();

            <section class="kb-column kb-@statusName.ToLower()">
                <div class="kb-column-header">
                    <h2>@statusName</h2>
                    <span class="kb-pill">@items.Count</span>
                </div>
                <div class="kb-column-body">
                    @if (items.Any())
                    {
                        foreach (var job in items)
                        {
                            <article class="kb-card">
                                <div class="kb-card-top">
                                    <span class="kb-company">@job.Company</span>
                                    <span class="kb-date">@job.DateApplied.ToShortDateString()</span>
                                </div>
                                <h3 class="kb-jobtitle">@job.JobTitle</h3>

                                @if (!string.IsNullOrWhiteSpace(job.Description))
                                {
                                    <p class="kb-desc">
                                        @(job.Description.Length > 90
                                            ? job.Description.Substring(0, 90) + "..."
                                            : job.Description)
                                    </p>
                                }

                                <div class="kb-meta">
                                    <span>@job.EmploymentType</span>
                                    @if (job.Salary.HasValue)
                                    {
                                        <span>$@job.Salary.Value.ToString("N0")</span>
                                    }
                                </div>

                                <div class="kb-actions">
                                    <a asp-action="Edit" asp-route-id="@job.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <a asp-controller="JobApplicationUi" asp-action="Delete" asp-route-id="@job.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                </div>

                                <div class="kb-links">
                                    @if (!string.IsNullOrEmpty(job.WebsiteLink))
                                    {
                                        <a href="@job.WebsiteLink" target="_blank">Job</a>
                                    }
                                    @if (!string.IsNullOrEmpty(job.ResumeUrl))
                                    {
                                        <a href="@job.ResumeUrl" target="_blank">Resume</a>
                                    }
                                </div>
                            </article>
                        }
                    }
                    else
                    {
                        <p class="kb-empty">No items</p>
                    }
                </div>
            </section>
        }
    </div>
</div>

