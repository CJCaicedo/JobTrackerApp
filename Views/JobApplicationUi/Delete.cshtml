@* ---------------------------------------------------------
   File: Delete.cshtml
   Description: Page to confirm the deletion of a job application.
   Notes: Shows the job info and asks the user to confirm.
   Author: Cindy Johana Caicedo
   --------------------------------------------------------- *@

@model JobTrackerApp.Dtos.JobApplicationReadDto

@{
    ViewData["Title"] = "Delete Job Application";
}

<div class="kb-page">
    <header class="kb-header">
        <div class="kb-brand">
            <img src="~/images/logocindy.png" alt="Logo" class="kb-logo" onerror="this.style.display='none'" />
            <div>
                <h1 class="kb-title">Delete Application</h1>
                <p class="kb-sub">Confirm before removing this job</p>
            </div>
        </div>
        <a asp-controller="JobApplicationUi" asp-action="Index" class="btn btn-primary">← Back</a>
    </header>

    <div class="kb-delete-center">
        <div class="kb-card kb-delete-card">
            <div class="kb-delete-icon">⚠️</div>
            <h2 class="kb-jobtitle">@Model.JobTitle</h2>
            <p class="kb-company">@Model.Company</p>

            <div class="kb-desc">
                <strong>Status:</strong> @Model.Status <br />
                <strong>Applied on:</strong> @Model.DateApplied.ToShortDateString()
            </div>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <p class="kb-desc">
                    @(
                        Model.Description.Length > 150
                        ? Model.Description.Substring(0, 150) + "..."
                        : Model.Description
                    )
                </p>
            }

            <div class="kb-alert">
                Are you sure you want to delete this application?  
                <strong>This action cannot be undone.</strong>
            </div>

            <form asp-controller="JobApplicationUi"
                  asp-action="Delete"
                  asp-route-id="@Model.Id"
                  method="post"
                  class="kb-delete-actions">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">Yes, delete</button>
                <a asp-controller="JobApplicationUi" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background: radial-gradient(circle at 30% 20%, #0f172a 0%, #1e293b 70%, #020617 100%);
        font-family: 'Inter', 'Segoe UI', Roboto, sans-serif;
        color: #f8fafc;
        margin: 0;
        padding: 0;
    }

    .kb-page {
        max-width: 1280px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    /* --- HEADER --- */
    .kb-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .kb-brand {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    /* smaller logo */
    .kb-logo {
        width: 110px;
        height: auto;
        object-fit: contain;
        padding: 3px;
    }

    .kb-title {
        font-weight: 700;
        font-size: 1.3rem;
        margin: 0;
        color: #f1f5f9;
    }

    .kb-sub {
        margin: 0;
        font-size: 0.8rem;
        color: #94a3b8;
    }

    .btn-primary {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        border: none;
        color: white;
        font-weight: 500;
        padding: 0.5rem 0.9rem;
        border-radius: 8px;
        text-decoration: none;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #7c3aed, #6366f1);
        box-shadow: 0 0 12px rgba(99,102,241,0.4);
    }

    /* --- DELETE CARD --- */
    .kb-delete-center {
        display: flex;
        justify-content: center;
        align-items: center;
        padding-top: 3rem;
    }

    .kb-card {
        background: rgba(255,255,255,0.06);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255,255,255,0.08);
        border-radius: 16px;
        padding: 2rem;
        width: 100%;
        max-width: 500px;
        text-align: center;
        box-shadow: 0 6px 20px rgba(0,0,0,0.25);
    }

    .kb-delete-icon {
        font-size: 2.2rem;
        margin-bottom: 0.6rem;
    }

    .kb-company {
        color: #a5b4fc;
        margin-bottom: .5rem;
    }

    .kb-desc {
        font-size: 0.85rem;
        color: #cbd5e1;
        line-height: 1.4;
        margin-bottom: 1rem;
    }

    .kb-alert {
        background: rgba(252, 165, 165, 0.12);
        border: 1px solid rgba(252, 165, 165, 0.4);
        color: #fee2e2;
        border-radius: 10px;
        padding: 0.75rem;
        font-size: 0.83rem;
        margin-bottom: 1.5rem;
    }

    .kb-delete-actions {
        display: flex;
        justify-content: center;
        gap: 0.7rem;
    }

    .btn-danger {
        background: #ef4444;
        border: none;
        color: #fff;
        padding: 0.5rem 1.1rem;
        border-radius: 8px;
        font-weight: 500;
    }

    .btn-danger:hover {
        background: #dc2626;
    }

    .btn-secondary {
        background: rgba(255,255,255,0.05);
        border: 1px solid rgba(255,255,255,0.12);
        color: #e2e8f0;
        padding: 0.5rem 1.1rem;
        border-radius: 8px;
        text-decoration: none;
    }

    .btn-secondary:hover {
        background: rgba(255,255,255,0.12);
    }

    @@media (max-width: 700px) {
        .kb-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.8rem;
        }

        .kb-card {
            padding: 1.2rem;
        }

        .kb-logo {
            width: 90px;
        }
    }
</style>
